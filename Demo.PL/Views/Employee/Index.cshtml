@using Demo.DAL.Entities
@model IEnumerable<EmployeeViewModel>



<h1>All Employees</h1>
<br />
<a class="btn btn-primary" asp-action="Create">Create New Employee</a>
<br />
<br />

<form class="my-3" asp-action="Index" asp-controller="Employee">

    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search ..." name="SearchValue" class="form-control" />
        </div>
        <div class="col-sm-Ц">
            <input type="submit" value="Search" class="btn btn-success btn-block" />
         </div>
    </div>
</form>

<br />
<br />
@if (Model?.Count() > 0)
{



    <table class="table table-stripped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(M => M.Name) </th>
                <th>@Html.DisplayNameFor(M => M.Image) </th>
                <th>@Html.DisplayNameFor(M => M.Address)</th>
                <th>@Html.DisplayNameFor(M => M.Email)</th>
                <th>@Html.DisplayNameFor(M => M.Salary) </th>
                <th>@Html.DisplayNameFor(M => M.HireDate)</th>
                <th>@Html.DisplayNameFor(M => M.IsActive)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
            {

                <tr>
                    <td>@item.Name</td>
                    
                    <td>
                        <img src="~/Files/Images/@item.ImageUrl" class="img-circle" height="40" width="40" alt="Employee Image"/>
                        
                    </td>

                    <td>@item.Address</td>
                    <td>@item.Email</td>
                    <td>@item.Salary</td>
                    <td>@item.HireDate.Day-@item.HireDate.Month-@item.HireDate.Year</td>
                    <td>@item.IsActive</td>
                    <td>
                        <a class="btn btn-info" asp-action="Details" asp-controller="Employee" asp-route-id="@item.Id">
                            <i class="fas fa-eye"></i>
                            Details
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Update" asp-controller="Employee" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i>
                            Update
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Employee" asp-route-id="@item.Id">
                            <i class="fas fa-trash"></i>
                            Delete
                        </a>
                    </td>
                </tr>

            }

        </tbody>

    </table>


}
else
{

    <div class="alert alert-warning">Not Found Any Employee</div>

}