@using Demo.DAL.Entities
@model IEnumerable<DepartmentViewModel>



<h1>All Departments</h1>
<br />
<a class="btn btn-primary" asp-action="Create">Create New Department</a>
<br />
<br />
@* <div class="alert alert-danger">

    <h3>@ViewBag.Message</h3>
</div>
<div class="alert alert-danger">

    <h3>@ViewData["MessageData"]</h3>
</div> *@
@if(TempData["MessageData"] != null){
    <div class="alert alert-success">

        <h3>@TempData["MessageData"]</h3>
    </div>
}
@if (Model?.Count() > 0)
{

    <div>All Department</div>

    <table class="table table-stripped table-hover">


        <thead>
            <tr>
                <th>@Html.DisplayNameFor(x=>x.Code)</th>
                <th>@Html.DisplayNameFor(x => x.Name)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>

        <tbody>

            @foreach (var dep in Model)
            {

                <tr>
                    <td>@dep.Code</td>
                    <td>@dep.Name</td>
                    <td>
                        <a class="btn btn-info" asp-action="Details" asp-controller="Department" asp-route-id="@dep.Id">
                            <i class="fas fa-eye"></i>
                            Details
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Update" asp-controller="Department" asp-route-id="@dep.Id">
                            <i class="fas fa-edit"></i>
                            Update
                        </a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Department" asp-route-id="@dep.Id">
                            <i class="fas fa-trash"></i>
                            Delete
                        </a>
                    </td>
                </tr>

            }

        </tbody>

    </table>


}
else
{

    <div class="alert alert-warning">Not Found Any Department</div>

}